{#
  Custom Twig for Carbon Button block.
  This replaces the default field output with your Carbon button component.
#}
 
{% set _text = content.field_text.0['#context'].value ?? 'Button' %}
{% set _url  = content.field_url.0['#url'] ?? null %}
{% set _kind = content.field_kind.0['#markup']|default('primary') %}
{% set _size = content.field_size.0['#markup']|default('md') %}
 
{% include 'carbonv1:cds-button' with {
  text: _text,
  kind: _kind,
  size: _size,
  href: _url ? _url.toString : ''
} only %}
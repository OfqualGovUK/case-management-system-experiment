{#
/**
* @file
* Theme override to display a single page.
*
* Requires theme JS to import the Carbon Web Components groups, e.g.:
*   import '@carbon/web-components/es/components/accordion/index.js';
*   import '@carbon/web-components/es/components/date-picker/index.js';
*   import '@carbon/web-components/es/components/data-table/index.js';
*   import '@carbon/web-components/es/components/pagination/index.js';
*
* And Sass to include @carbon/styles so tokens are available.
*/
#}
<div class="page-wrapper">
  {# Header region #}
  {% if page.header %}
    <!--<header class="site-header" role="banner">
      {{ page.header }}
    </header>-->
  {% endif %}

  {# Primary nav #}
  {% if page.primary_menu %}
    <nav class="primary-nav" role="navigation" aria-label="{{ 'Main navigation'|t }}">
      {{ page.primary_menu }}
    </nav>
  {% endif %}

  {# Breadcrumb (if using core breadcrumb block/region) #}
  {% if breadcrumb is defined and breadcrumb %}
    <nav class="breadcrumb" aria-label="{{ 'Breadcrumb'|t }}">
      {{ breadcrumb }}
    </nav>
  {% endif %}

  {% if page.highlighted %}
    <div class="highlighted">{{ page.highlighted }}</div>
  {% endif %}

  {% if page.help %}
    <div class="help">{{ page.help }}</div>
  {% endif %}

  {% include '@carbonv1/includes/header.html.twig' %}

  <main role="main" class="site-main cds--content">
    <a id="main-content" tabindex="-1"></a>

    <!-- Container: full-width Carbon CSS Grid -->
    <div class="cds--css-grid cds--css-grid--full-width">
      <!-- LEFT column -->
      <div class="
        cds--css-grid-column
        cds--sm:col-span-4
        cds--md:col-span-2
        cds--lg:col-span-4
        cds--xlg:col-span-4
        cds--max:col-span-4
      ">
        <!-- Left rail content (e.g., filters, queues) -->
        {% if page.sidebar_first %}
          {{ page.sidebar_first }}
        {% endif %}

        {# Date Picker #}
        <h4>Date Picker</h4>
        {% include 'carbonv1:cds-date-picker' with {
          label_text: '',
          placeholder: 'mm-dd-yyyy',
          kind: 'single',
          date_format: 'm-d-Y'
        } only %}

        <h4>Accordion</h4>
        <cds-accordion>
          <cds-accordion-item title="What is Carbon?" open>
            <p>IBM’s design system for building accessible, consistent UIs.</p>
          </cds-accordion-item>
          <cds-accordion-item title="Why use it?">
            <p>Design tokens, web components, and robust patterns.</p>
          </cds-accordion-item>
        </cds-accordion>

        <h4>Text Input</h4>
        {# Text input #}
        {% include 'carbonv1:cds-text-input' with {
          name: 'case_title',
          label: 'Title',
          placeholder: 'Enter title…',
          required: true,
          type: 'text',
          helper_text: 'Please enter the case title.',
        } only %}
        {% include 'carbonv1:cds-text-input' with {
          name: 'case_password',
          label: 'Password',
          placeholder: 'Enter Password',
          required: true,
          type: 'password',
          helper_text: 'Please enter the case Password.',
        } only %}
        <cds-form-item>
        <h4>Select</h4>
          <cds-select
            helper-text="Optional helper text"
            invalid-text="Error message"
            label-text="Select an option"
            placeholder=""
            size="md"
            warn-text="Warning message"
            value=""
          >
            <cds-select-item value=""></cds-select-item>
            <cds-select-item value="all">
              An example option that is really long to show what should be done to handle long text
            </cds-select-item>
            <cds-select-item value="cloudFoundry">Option 2</cds-select-item>
            <cds-select-item value="staging">Option 3</cds-select-item>
            <cds-select-item value="dea">Option 4</cds-select-item>
            <cds-select-item value="An example option that is really long to show what should be done to handle long text">
              An example option that is really long to show what should be done to handle long text
            </cds-select-item>
            <cds-select-item selected="" value="option-2">Option 2</cds-select-item>
            <cds-select-item value="option-3">Option 3</cds-select-item>
            <cds-select-item value="option-4">Option 4</cds-select-item>
          </cds-select>

          <cds-text-input
            helper-text="Helper text"
            invalid-text="Error message goes here"
            label="Label text"
            max-count="100"
            placeholder="Placeholder text"
            size="md"
            type="text"
            value=""
            warn-text="Warning message that is really long can wrap to more lines but should not be excessively long."
          ></cds-text-input>

          <cds-textarea
            enable-counter=""
            counter-mode=""
            helper-text="TextArea helper text"
            invalid-text="Error message that is really long can wrap to more lines but should not be excessively long."
            label="TextArea label"
            value=""
            warn-text="This is a warning message."
            max-count="500"
            placeholder=""
            rows="4"
            cols="0"
          ></cds-textarea>
        </cds-form-item>
                <h4>Button</h4>
        {# Primary submit button #}
        {% include 'carbonv1:cds-button' with {
          text: 'Save',
          kind: 'primary',
          type: 'submit'
        } only %}
        
        {# Ghost link button #}
        {% include 'carbonv1:cds-button' with {
          text: 'Cancel',
          kind: 'primary',
          href: path('<front>')
        } only %}
      </div>

      <!-- RIGHT column -->
      <div class="
        cds--css-grid-column
        cds--sm:col-span-4
        cds--md:col-span-6
        cds--lg:col-span-12
        cds--xlg:col-span-12
        cds--max:col-span-12
      ">
        <!-- Main content -->
        {% if page.contents %}
          <div class="page-content">
            {{ page.content }}
          </div>
        {% endif %}
        <h4>DataTable</h4>
        {% include 'carbonv1:cds-data-table' with {
          headers: ['CaseID','Title','Case type','Submitted by','Date','Status','Case lead'],
          rows: [
            { cells: ['OFQ-1004','About invigilation','Complaint','NextGen Assessments','05/06/2025','Triage','Hannah Reed'] },
            { cells: ['OFQ-1005','Statement of Compliance','Statement of compliance','Assessment Partners UK','06/06/2025','Review','Sam Turner'] },
            { cells: ['OFQ-1006','Information notice under B4','Information notice B4','Global Qualifications','07/06/2025','Received','Ashley Patel'] },
            { cells: ['OFQ-1011','Information notice B4','Information notice B4','NextGen Assessments','10/06/2025','Closed','Rosa Jenkins'] },
            { cells: ['OFQ-1012','Appeal against results','Appeal','Exam Solutions Ltd','11/06/2025','Open','Jordan Smith'] },
            { cells: ['OFQ-1013','Malpractice investigation','Investigation','CertifyNow','12/06/2025','In Progress','Priya Shah'] },
            { cells: ['OFQ-1014','Centre withdrawal request','Withdrawal','Learning Hub','13/06/2025','Pending','Alex Brown'] },
            { cells: ['OFQ-1015','Special consideration','Special consideration','EduCare','14/06/2025','Closed','Maria Lopez'] },
            { cells: ['OFQ-1016','Complaint about marking','Complaint','Bright Future Academy','15/06/2025','Triage','Tom Evans'] },
            { cells: ['OFQ-1017','Request for adjustments','Adjustment','AccessEd','16/06/2025','Review','Emily Carter'] },
            { cells: ['OFQ-1018','Lost scripts report','Incident','ScriptSafe','17/06/2025','Received','James Wilson'] },
            { cells: ['OFQ-1019','Centre approval renewal','Approval','NextGen Assessments','18/06/2025','Pending','Hannah Reed'] },
            { cells: ['OFQ-1020','Suspected plagiarism','Investigation','Assessment Partners UK','19/06/2025','In Progress','Sam Turner'] },
            { cells: ['OFQ-1021','Appeal outcome notification','Appeal','Global Qualifications','20/06/2025','Closed','Ashley Patel'] },
          ],
          searchable: true,
          sortable:   true,
          paginated:  true,
          page_size:  10,
          page_sizes: [10,20,50],
          column_types: ['string','string','string','string','date','string','string']
        } only %}
      </div>
    </div>

    {% include '@carbonv1/includes/footer.html.twig' %}

    {# Sidebars #}
    {% if page.sidebar_first %}
      <aside class="layout-sidebar-first" role="complementary">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    {% if page.sidebar_second %}
      <aside class="layout-sidebar-second" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="site-footer" role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}
</div>

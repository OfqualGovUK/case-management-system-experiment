{# components/cds-button/cds-button.twig #}

{% set _id        = id|default('') %}
{% set _label     = text|default('') %}
{% set _icon_only = icon_only|default(false) %}

<cds-button
    id="{{ _id }}"
    kind="{{ kind|default('primary') }}"
    size="{{ size|default('md') }}"
    {% if disabled %} disabled {% endif %}
    {# link vs. real button #}
    {% if href %}
        href="{{ href }}"
        {% if target %} target="{{ target }}" {% endif %}
        {% if download %} download="{{ download }}" {% endif %}
    {% else %}
        type="{{ type|default('button') }}"
    {% endif %}
    {# icon-only mode ONLY when explicitly true #}
    {% if _icon_only %}
        has-icon-only
        icon-description="{{ icon_description|default(_label)|e }}"
    {% endif %}
>
    {# Optional icon SVG goes in the icon slot #}
    {% if icon_svg %}
        <span slot="icon">{{ icon_svg|raw }}</span>
    {% endif %}
    {# Visible label(skip when icon-only) #}
    {% if not _icon_only %}
        {{- _label -}}
    {% endif %}
</cds-button>

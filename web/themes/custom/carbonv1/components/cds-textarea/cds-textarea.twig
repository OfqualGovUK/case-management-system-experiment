<cds-textarea
  id="{{ _id }}"
  {% if name is defined %} name="{{ name }}" {% endif %}
  label-text="{{ label }}"
  {% if value is defined %} value="{{ value }}" {% endif %}
  {% if placeholder is defined %} placeholder="{{ placeholder }}" {% endif %}
  {% if helper_text %} helper-text="{{ helper_text }}" {% endif %}
  rows="{{ rows|default(4) }}"
  size="{{ size|default('md') }}"
  {% if disabled %} disabled {% endif %}
  {% if required %} required {% endif %}
  {% if readonly %} readonly {% endif %}
  {% if invalid %} invalid {% endif %}
  {% if invalid_text %} invalid-text="{{ invalid_text }}" {% endif %}
></cds-textarea>
 
{# Optional: hidden input if need Drupal to receive a value on submit #}
{% if name is defined %}
<input type="hidden" name="{{ name }}" value="{{ value|default('') }}" data-sync-from="{{ _id }}">
{% endif %}